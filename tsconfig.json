{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDirs": ["src", "tests"],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "target": "ESNext",
    "typeRoots": ["@types", "./node_modules/@types"],
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "tests", "@types"]
}
