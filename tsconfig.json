{
  "compilerOptions": {
    "typeRoots": ["./src/main/@types", "./node_modules/@types"],
    "target": "ES2015",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": true,
  },
  "include": ["src", "tests"]
}
